<TabbedPanel>:
    do_default_tab: False

<TabbedPanel>:
    background_color: 0,0,0,0

<MovieListElement>:
    # List element border
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height


<PersonListElement>:
    # List element border
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
